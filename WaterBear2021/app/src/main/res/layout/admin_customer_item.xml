<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="15dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3F8EB5"
        android:padding="8dp">

        <TextView
            android:id="@+id/admin_customerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/admin_customerContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/admin_customerName"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/admin_customerAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/admin_customerContact"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/admin_customerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/admin_customerAddress"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>